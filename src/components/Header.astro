---
import { SITE_TITLE } from '../consts';
import zettalystImage from '../assets/zettalyst.png';
import { Image } from 'astro:assets';

interface Props {
  isGradation: boolean;
}

const { isGradation = false } = Astro.props;
---

<header class="mb-16">
  <nav class="flex items-center justify-between">
    <h2>
      <a href="/" class="text-[1.375rem] font-black tracking-tight">
        <span class:list={[isGradation ? 'gradient-text' : 'header-title-text']}>
          {SITE_TITLE}
        </span>
      </a>
    </h2>
    <div class="flex items-center gap-2.5 text-[0.9rem] text-[--text-muted]">
      <span class="font-light italic">by</span>
      <a
        href="https://github.com/zettalyst"
        target="_blank"
        rel="noopener noreferrer"
        class="block"
      >
        <Image
          alt="Zettalyst"
          src={zettalystImage}
          class="profile-image h-9 w-9 rounded-full ring-2 ring-transparent hover:ring-[--accent-line]"
        />
      </a>
    </div>
  </nav>
</header>

<style>
  .header-title-text {
    color: var(--text);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--pink), var(--purple));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
</style>
