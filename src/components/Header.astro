---
import { SITE_TITLE } from '../consts';
import zettalystImage from '../assets/zettalyst.png';

interface Props {
  isGradation: boolean;
}

const { isGradation = false } = Astro.props;
---

<header class="mb-14">
  <nav class="flex items-center justify-between">
    <h2>
      <a
        href="/"
        class:list={[
          'text-2xl font-black transition-all hover:opacity-80',
          { 'hover:scale-[1.02]': isGradation },
        ]}
      >
        <span class={isGradation ? 'gradient-text' : 'text-[--text]'}>
          {SITE_TITLE}
        </span>
      </a>
    </h2>
    <div class="flex items-center gap-2 italic">
      <span>by</span>
      <a
        href="https://github.com/zettalyst"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          alt="Zettalyst"
          src={zettalystImage.src}
          class="h-8 w-8 rounded-full"
        />
      </a>
    </div>
  </nav>
</header>

<style>
  .header-title-text {
    color: var(--text);
  }

  .gradient-text {
    background-image: linear-gradient(45deg, var(--pink), var(--purple));
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    transition: all 0.2s ease-in-out;
  }

  a {
    transition: transform 0.2s ease-in-out;
  }

  a:hover {
    transform: scale(1.05);
  }

  a:hover .gradient-text {
    background-image: linear-gradient(45deg, var(--purple), var(--pink));
  }
</style>
